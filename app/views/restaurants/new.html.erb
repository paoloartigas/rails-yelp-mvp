<h1>New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORIES %>
  <%= f.button :submit, "Create Restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", restaurants_path, class: "btn btn-secondary mt-2" %>
